<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- odoo tree view patient -->
    <record id="patient_tree" model="ir.ui.view">
        <field name="name">hospital.patient.tree</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <tree string="Patients">
                <field name="name_seq" />
                <field name="patient_name" />
                <field name="patient_age" />
                <field name="gender" />
                <field name="notes" />
                <field name="image" />
            </tree>
        </field>
    </record>


    <!-- odoo form patient -->
    <record id="patient_form" model="ir.ui.view">
        <field name="name">hospital.patient.form</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
        <form string="Patients">
            <sheet>
                <div class="oe_title">
                    <h1>
                        <field name="name_seq" readonly="1"/>
                    </h1>
                </div>
                <group>
                    <group>
                         <field name="patient_name" />
                         <field name="name" />
                    </group>
                    <group>
                         <field name="patient_age" />
                         <field name="gender" />
                    </group>
                </group>
                <group>
                         <field name="notes" />
                         <field name="image" />
                </group>
            </sheet>
            <!-- widget oe chattaer -->
            <div class="oe_chatter">
                <field name="message_follower_ids" widget="mail_followers"/>
                <field name="activity_ids" widget="mail_activity"/>
                <field name="message_ids" widget="mail_thread" options="{'post_refresh':'recipients'}"/>
            </div>
        </form>
        </field>
    </record>

    <!-- Search View -->
    <record model="ir.ui.view" id="hospital_patient_search">
        <field name="name">hospital.patient.search</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <search string="Search Patients">
                <field name="patient_name"  filter_domain="['|',('patient_name', 'ilike', self),('name_seq', 'ilike', self)]"  />
                <field name="name_seq"/>
                <separator />
                <filter string="Male" name="male" domain="[('gender','=','male')]"/>
                <filter string="Female" name="female" domain="[('gender','=','female')]"/>
                <group string="Group by">
                    <filter string="Gender" name="gender" context="{'group_by': 'gender'}"  />
                </group>
            </search>
        </field>
    </record>

    <!-- action for patient menu -->
    <record id="action_patient" model="ir.actions.act_window">
        <field name="type">ir.actions.act_window</field>
        <field name="patient_name">Patients</field>
        <field name="res_model">hospital.patient</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crete first Patient !
            </p>
        </field>
    </record>

    <!-- menu hospital  -->
    <menuitem id="hospital_root" name="Hospital" sequence="0" web_icon="om_hospital,static/description/icon.png"/>
    <menuitem id="hospital_patient" name="Patient" parent="hospital_root" action="action_patient"/>
</odoo>
